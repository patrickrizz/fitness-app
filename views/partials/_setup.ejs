<%- include('_head') %>
<div class="login-bg">
    <section id=sign-up class="container">
        <div class="row center">
            <h1>Set up your account</h1>
            <%- include('_validation') %>
            <form id=sign-up-form class="col s12" action="/set-up" method="post">
                <p>Fill out the form below and let's get started!</p>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <input id="weight" type="text" class="validate" name="weight">
                        <label for="weight">Weight in Pounds (Optional)</label>
                    </div>
                    <div class="input-field col s12 m6">
                        <select name="objective">
                            <option value="" disabled selected>*Choose an objective, or more...</option>
                            <% for(i = 0; i < objective.length; i++) {%>
                                <option value="<%= objective[i].objective %>"><%= objective[i].objective %></option>                                
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m6">
                        <select name="xp_level">
                            <option value="" disabled selected>*Choose an objective, or more...</option>
                            <% for(i = 0; i < experienceLevel.length; i++) {%>
                                <option value="<%= experienceLevel[i].xp_level %>"><%= experienceLevel[i].xp_level %>: <%= experienceLevel[i].xp_description %></option>                                
                            <% } %>
                        </select>
                    </div>
                    <div class="input-field col s12 m6">
                        <select name="strategy">
                            <option value="" disabled selected>Choose a strategy to start with...(optional)</option>
                            <% for(i = 0; i < experienceLevel.length; i++) {%>
                                <option value="<%= strategy[i].strategy %>"><%= strategy[i].strategy %></option>                                
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <button class="btn btn-block" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
<%- include('_footer') %>