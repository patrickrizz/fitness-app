<%- include('partials/_head') %>
<%- include('partials/_header') %>
<main>
    <div class="container">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Create <%= title %></span>
                <div class="row">
                    <%- include('../partials/_validation') %>
                    <form class="col s12"
                        action="/admin/create/<% if(title == 'Experience Levels') { %>create_experience<% } else if(title == 'Objectives') { %>create_objective<% } else if(title == 'Roles') { %>create_role<% }%>"
                        method="post">
                        <div class="row">
                            <div class="input-field col s12 m5">
                                <input type="text" class="validate"
                                    name="<% if(title == 'Experience Levels') { %>xp_level<% } else if(title == 'Objectives') { %>objective<% } else if(title == 'Roles') { %>role<% }%>">
                                <label><% if(title == 'Experience Levels') { %>Experience
                                    Level<% } else if(title == 'Objectives') { %>Objective<% } else if(title == 'Roles') { %>Role<% }%></label>
                            </div>
                            <div class="input-field col s12 m5">
                                <textarea class="materialize-textarea"
                                    name="<% if(title == 'Experience Levels') { %>xp_description<% } else if(title == 'Objectives') { %>objective_description<% } else if(title == 'Roles') { %>role_description<% }%>"></textarea>
                                <label><% if(title == 'Experience Levels') { %>Experience Level
                                    Description<% } else if(title == 'Objectives') { %>Objective
                                    Description<% } else if(title == 'Roles') { %>Role Description<% }%></label>
                            </div>
                            <div class="col s12 m2">
                                <button class="btn-large btn-floating" type="submit"><i
                                        class="material-icons">add</i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <table id="table">

                    <% if(title == 'Experience Levels') { %>

                    <thead>
                        <tr>
                            <th>Experience Level</th>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(i = 0; i < experience.length; i++) { %>
                        <tr>
                            <td><%= experience[i].xp_level %></td>
                            <td><%= experience[i].xp_description %></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <% } %>
                    </tbody>

                    <% } else if(title == 'Objectives') { %>

                    <thead>
                        <tr>
                            <th>Objective</th>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(i = 0; i < objective.length; i++) { %>
                        <tr>
                            <td><%= objective[i].objective %></td>
                            <td><%= objective[i].objective_description %></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <% } %>
                    </tbody>

                    <% } else if(title == 'Roles') { %>

                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(i = 0; i < role.length; i++) { %>
                        <tr>
                            <td><%= role[i].role %></td>
                            <td><%= role[i].role_description %></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <% } %>
                    </tbody>
                    
                    <% } else if(title == 'Goals') { %>

                        <thead>
                            <tr>
                                <th>Goal</th>
                                <th>Description</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(i = 0; i < goal.length; i++) { %>
                            <tr>
                                <td><%= goal[i].goal %></td>
                                <td><%= goal[i].goal_description %></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <% } %>
                        </tbody>
                        
                        <% } %>

                </table>
            </div>
        </div>
    </div>
</main>
<%- include('partials/_footer') %>